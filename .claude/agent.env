#!/bin/bash
# ASDF environment initialization for Claude Code (VS Code extension)
# Run this manually with: source .claude/agent.env

export PATH="/opt/homebrew/bin:$HOME/.asdf/shims:$PATH"

if [ -n "$ASDF_DIR" ]; then
  . "$ASDF_DIR/asdf.sh"
elif [ -d "$HOME/.asdf" ]; then
  export ASDF_DIR="$HOME/.asdf"
  . "$HOME/.asdf/asdf.sh"
elif [ -d "/opt/homebrew/opt/asdf/libexec" ]; then
  export ASDF_DIR="/opt/homebrew/opt/asdf/libexec"
  . "/opt/homebrew/opt/asdf/libexec/asdf.sh"
elif [ -d "/usr/local/opt/asdf/libexec" ]; then
  export ASDF_DIR="/usr/local/opt/asdf/libexec"
  . "/usr/local/opt/asdf/libexec/asdf.sh"
fi

echo "âœ… ASDF environment initialized"
echo "Python: $(which python)"
echo "Python version: $(python --version 2>&1)"
